@using BurgerShop.Application.Models.DTOs;
@model RegisterDTO

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Üye Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/register.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="title">Üye Ol</div>
        <div class="content">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">İsim Soyisim</span>
                        <input asp-for="FirstName" placeholder="İsim Soyisim Giriniz" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Kullanıcı Adı</span>
                        <input asp-for="LastName" placeholder="Kullanıcı Adı Giriniz" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Email</span>
                        <input asp-for="Email" placeholder="Emailinizi Giriniz" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre</span>
                        <input asp-for="Password" type="password" placeholder="Şifrenizi Giriniz" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre Onayla</span>
                        <input asp-for="ConfirmedPassword" type="password" placeholder="Şifrenizi Onaylayın" required>
                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Üye Ol" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>