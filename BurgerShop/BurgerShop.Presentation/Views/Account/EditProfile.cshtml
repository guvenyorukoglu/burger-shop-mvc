@using BurgerShop.Application.Models.DTOs;
@model UpdateProfileDTO

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/editProfile.css">
    <title>Profili Düzenle</title>
</head>
<body>

    <div class="container">
        <div class="title">Edit Profile</div>

        <form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="content">
            <div class="user-details">
                <div class="input-box">
                    <span class="details">First Name</span>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <span class="details">Last Name</span>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <span class="details">Email</span>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <span class="details">Password</span>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <span class="details">Confirm Password</span>
                    <input asp-for="ConfirmedPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>

                @*<div class="input-box">
                <span class="details">Profile Image</span>
                <input asp-for="UploadPath" type="file" class="form-control" />
                <span asp-validation-for="UploadPath" class="text-danger"></span>
                </div>*@
            </div>

            <div class="button">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>


        </form>

    

           
           <a asp-action="Index" asp-controller="Address">Address </a>
          

       
    </div>

</body>
</html>