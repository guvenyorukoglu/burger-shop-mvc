@using BurgerShop.Application.Models.VMs;
@using BurgerShop.Domain.Enums;
@model MenuVM

@{
    ViewData["Title"] = "AddMenu";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";

}

@{
    List<MenuSize> menuSizeList = Enum.GetValues(typeof(MenuSize)).Cast<MenuSize>().ToList();
}

<div class="container">

    <h1>Add</h1>

<h4>Menu</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Menu.Id" />
            <div class="form-group">
                <label asp-for="Menu.MenuName" class="control-label"></label>
                <input asp-for="Menu.MenuName" class="form-control" />
                <span asp-validation-for="Menu.MenuName" class="text-danger"></span>
            </div>

             <div class="form-group">
                  <label asp-for="Menu.MenuSize" class="control-label"></label>
             <select name="Menu.MenuSize" id="menuSizes" class="form-select mb-5 menuSizes" data-MenuSize="@Model.Menu.MenuSize">
                                @foreach (var size in menuSizeList)
                                {
                                    <option value="@size">@size</option>
                                }
                            </select>
             </div>


            <div class="form-group">
                <label asp-for="Menu.MenuPrice" class="control-label"></label>
                <input asp-for="Menu.MenuPrice" class="form-control" />
                <span asp-validation-for="Menu.MenuPrice" class="text-danger"></span>
            </div

            <div class="form-group">
                <img src="@Model.Menu." alt="category-item-picture">
            </div>

            <div class="form-group">
                <label asp-for="Menu.MenuImagePath" class="control-label"></label>
                <input asp-for="Menu.MenuImagePath" class="form-control" />
                <span asp-validation-for="Menu.MenuImagePath" class="text-danger"></span>
                <a asp-action="UploadPicture" asp-controller="Admin" asp-route-MenuId="@Model.Menu.Id">
                    <button class="btn btn-dark btn-sm d-inline-flex m-3">Upload Picture</button>
                </a> <a asp-action="DeletePicture" asp-controller="Admin" asp-route-MenuId="@Model.Menu.Id">
                    <button class="btn btn-secondary btn-sm d-inline-flex m-3">Delete Picture</button>
                </a>
            </div>





            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary m-3" asp-action="AddMenu" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Menus">Back to List</a>
</div>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}