    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="container">

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Menu</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
