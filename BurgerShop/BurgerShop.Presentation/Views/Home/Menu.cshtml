    <script>
        $(".menuSizes").change(function () {
            var selectedSize = $(this).val();
            var selectedMenuName = $(this).data('data-menu-name');

            var $currentCard = $(this).closest('.card');

            $.ajax({
                type: "POST",
                url: "/Home/GetPriceBySize",
                data: { name: selectedMenuName, menuSize: selectedSize },
                success: function (price) {
                    $currentCard.find('.menuPrice').innerText = price;
                }
            });
        });
    </script>


