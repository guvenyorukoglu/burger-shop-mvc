<body>
    @{
        if (Model != null)
        {
            //List<Menu> menus = displayedMenus;
            int itemsPerPage = 6;
            int currentPage = ViewBag.CurrentPage ?? 1;

            var startIndex = (currentPage - 1) * itemsPerPage;
            var endIndex = startIndex + itemsPerPage;


            //displayedMenus = menus.Skip(startIndex).Take(itemsPerPage).ToList();
        }
        <div class="container gap-3 mt-5">
            @foreach (var menuItem in displayedMenus)
            {
                <div class="col-lg-4 mt-4 card">
                    <div class="menu-box border bg-dark rounded-3">
                        <div id="our-menu" class="bg-light text-center">
                            <img class="img-fluid" style="width: 100%;" src="@menuItem.MenuImagePath" alt="" />
                        </div>
                        <div class="container bg-dark text-white text-start p-4 rounded-bottom-3" style="display:flex; flex-direction:column">
                            <h5>@menuItem.MenuName</h5> <hr>

                            <select name="menuSizes" id="menuSizes" class="form-select mb-5 menuSizes" data-menu-name="@menuItem.MenuName">
                                @foreach (var size in menuSizeList)
                                {
                                    <option onchange="getPrice" value="@size">@size</option>
                                }
                            </select>

                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="text-start fs-3">
                                    <span class="menuPrice">@menuItem.MenuPrice</span> ₺
                                </h6>


                                <form method="post" asp-action="AddToCart" asp-controller="Home" class="addToCartForm" id="addToCartForm">


                                    <input type="hidden" name="MenuName" value="@menuItem.MenuName" />
                                    <input type="hidden" name="MenuPrice" value="@menuItem.MenuPrice" />

                                    <button type="submit" asp-action="AddToCart" onclick="AddedToCart()" id="btn-cart" class="btn btn-warning float-end rounded-5 pt-2 pb-2">
                                        <i class="fa fa-shopping-cart"></i>
                                    </button>

                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }


    <div class="modal fade modal-xl"
         id="exampleModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Order Your Hamburger
                    </h5>
                    <button type="button"
                            class="close"
                            data-bs-dismiss="modal"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    <h1>Shopping Cart</h1>

                    <div class="shopping-cart">

                        <div class="column-labels">
                            <label class="product-image">Image</label>
                            <label class="product-details">Product</label>
                            <label class="product-price">Price</label>
                            <label class="product-extra">Size</label>

                            <label class="product-quantity">Extra</label>
                            <label class="product-quantity">Quantity</label>
                            <label class="product-removal">Remove</label>
                            <label class="product-line-price">Total</label>
                        </div>


                        @{


                        }

                        @*TODO: Bu kısımda modele ait bilgileri getirmemiz gerekecek.*@

                        <div class="product">
                            @if (Model != null && Model.AddedMenus != null && Model.AddedMenus.Any())
                            {
                                <div class="product-item">
                                    @foreach (var item in Model.AddedMenus)
                                    {

                                        <div class="product-image">
                                            <img src="@item.MenuImagePath" alt="image">
                                        </div>

                                        <div class="product-details">
                                            <div class="product-title">@item.MenuName</div>
                                        </div>

                                        <div class="product-details">
                                            <div class="product-price">@item.MenuPrice</div>
                                        </div>






                                        <div class="product-extras">
                                            <div class="product-extra">
                                                <label for="extraOptions_@item.Id"></label>

                                            </div>



                                            <div class="product-extra">


                                                <select name="selectedExtra" id="selectedExtra_@item.Id">
                                                    @if (Model.Extras != null)
                                                    {
                                                        @foreach (var extra in Model.Extras)
                                                        {
                                                            <option value="@extra.ExtraName">@extra.ExtraName</option>
                                                        }
                                                    }
                                                </select>

                                            </div>
                                        </div>

                                        <div class="product-quantity">
                                            <input type="number" value="1" min="1">
                                        </div>
                                        <div class="product-removal">
                                            <button asp-action="RemoveFromCart" class="remove-product">Remove</button>
                                        </div>
                                        <div class="product-line-price">@item.MenuPrice</div>

                                    }
                                </div>
                            }
                        </div>
                        <button onclick="orderCreated()" class="checkout">Checkout</button>

                    </div>


                </div>

            </div>
        </div>
    </div>


